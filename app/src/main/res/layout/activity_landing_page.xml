<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPage">
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:orientation="vertical">

           <RelativeLayout
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:background="#EEEEEE">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="230dp"
                   android:orientation="vertical"
                   android:gravity="center"
                   android:background="@drawable/main_background">

                   <ImageView
                       android:layout_width="90dp"
                       android:layout_height="90dp"
                       android:src="@drawable/img_church"
                       android:layout_gravity="center"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginTop="10dp"
                       android:text="@string/right_way_christian_church_center"
                       android:textColor="#ffffff"
                       android:textSize="24sp"
                       android:textStyle="bold" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginTop="215dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp">
                   
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="150dp"
                       android:layout_marginBottom="10dp"
                       android:orientation="horizontal">
                       
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <ImageView
                                   android:id="@+id/img_connects"
                                   android:layout_width="100dp"
                                   android:layout_height="100dp"
                                   android:layout_centerInParent="true"
                                   android:src="@drawable/connect_icon" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/connects"
                                   android:textSize="16sp"
                                   android:layout_below="@id/img_connects"
                                   android:layout_centerHorizontal="true"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginBottom="5dp"

                                   />

                               <Button
                                   android:id="@+id/btn_connects"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@android:color/transparent"/>

                           </RelativeLayout>

                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <ImageView
                                   android:id="@+id/img_livestream"
                                   android:layout_width="100dp"
                                   android:layout_height="100dp"
                                   android:layout_centerInParent="true"
                                   android:src="@drawable/livestream" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/livestream"
                                   android:textSize="16sp"
                                   android:layout_below="@id/img_livestream"
                                   android:layout_centerHorizontal="true"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginBottom="5dp"

                                   />

                               <Button
                                   android:id="@+id/btn_livestream"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@android:color/transparent"/>

                           </RelativeLayout>

                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <ImageView
                                   android:id="@+id/img_life_group"
                                   android:layout_width="100dp"
                                   android:layout_height="100dp"
                                   android:layout_centerInParent="true"
                                   android:src="@drawable/group_life_icon" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/life_group"
                                   android:textSize="16sp"
                                   android:layout_below="@id/img_life_group"
                                   android:layout_centerHorizontal="true"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginBottom="5dp"

                                   />

                               <Button
                                   android:id="@+id/btn_life_group"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@android:color/transparent"/>

                           </RelativeLayout>

                       </androidx.cardview.widget.CardView>


                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="150dp"
                       android:layout_marginBottom="10dp"
                       android:orientation="horizontal">

                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <ImageView
                                   android:id="@+id/img_sermons"
                                   android:layout_width="100dp"
                                   android:layout_height="100dp"
                                   android:layout_centerInParent="true"
                                   android:src="@drawable/sermons_icon" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/sermons"
                                   android:textSize="16sp"
                                   android:layout_below="@id/img_sermons"
                                   android:layout_centerHorizontal="true"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginBottom="5dp"

                                   />

                               <Button
                                   android:id="@+id/btn_sermons"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@android:color/transparent"/>

                           </RelativeLayout>

                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <ImageView
                                   android:id="@+id/img_give"
                                   android:layout_width="100dp"
                                   android:layout_height="100dp"
                                   android:layout_centerInParent="true"
                                   android:src="@drawable/give_icon" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/give"
                                   android:textSize="16sp"
                                   android:layout_below="@id/img_give"
                                   android:layout_centerHorizontal="true"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginBottom="5dp"

                                   />

                               <Button
                                   android:id="@+id/btn_give"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@android:color/transparent"/>

                           </RelativeLayout>

                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <ImageView
                                   android:id="@+id/img_about_us"
                                   android:layout_width="100dp"
                                   android:layout_height="100dp"
                                   android:layout_centerInParent="true"
                                   android:src="@drawable/about_us_icon" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/about_us"
                                   android:textSize="16sp"
                                   android:layout_below="@id/img_about_us"
                                   android:layout_centerHorizontal="true"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginBottom="5dp"

                                   />

                               <Button
                                   android:id="@+id/btn_about_us"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@android:color/transparent"/>

                           </RelativeLayout>

                       </androidx.cardview.widget.CardView>


                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="150dp"
                       android:layout_marginBottom="10dp"
                       android:orientation="horizontal">

                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <ImageView
                                   android:id="@+id/img_invite_friends"
                                   android:layout_width="100dp"
                                   android:layout_height="100dp"
                                   android:layout_centerInParent="true"
                                   android:src="@drawable/add_friend_icon" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/invite_friends"
                                   android:textSize="16sp"
                                   android:layout_below="@id/img_invite_friends"
                                   android:layout_centerHorizontal="true"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginBottom="5dp"

                                   />

                               <Button
                                   android:id="@+id/btn_invite_friends"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@android:color/transparent"/>

                           </RelativeLayout>

                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <ImageView
                                   android:id="@+id/img_prayer_request"
                                   android:layout_width="100dp"
                                   android:layout_height="100dp"
                                   android:layout_centerInParent="true"
                                   android:src="@drawable/prayer_icon" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/prayer_request"
                                   android:textSize="16sp"
                                   android:layout_below="@id/img_prayer_request"
                                   android:layout_centerHorizontal="true"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginBottom="5dp"

                                   />

                               <Button
                                   android:id="@+id/btn_prayer_request"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@android:color/transparent"/>

                           </RelativeLayout>

                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <ImageView
                                   android:id="@+id/img_facebook"
                                   android:layout_width="100dp"
                                   android:layout_height="100dp"
                                   android:layout_centerInParent="true"
                                   android:src="@drawable/facebook_icon" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/facebook"
                                   android:textSize="16sp"
                                   android:layout_below="@id/img_facebook"
                                   android:layout_centerHorizontal="true"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginBottom="5dp"

                                   />

                               <Button
                                   android:id="@+id/btn_facebook"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@android:color/transparent"/>

                           </RelativeLayout>

                       </androidx.cardview.widget.CardView>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="150dp"
                       android:layout_marginBottom="60dp"
                       android:orientation="horizontal">

                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <ImageView
                                   android:id="@+id/img_resources"
                                   android:layout_width="100dp"
                                   android:layout_height="100dp"
                                   android:layout_centerInParent="true"
                                   android:src="@drawable/resources_icon" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/resources"
                                   android:textSize="16sp"
                                   android:layout_below="@id/img_resources"
                                   android:layout_centerHorizontal="true"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginBottom="5dp"

                                   />

                               <Button
                                   android:id="@+id/btn_resources"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@android:color/transparent"/>

                           </RelativeLayout>

                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <ImageView
                                   android:id="@+id/img_events"
                                   android:layout_width="100dp"
                                   android:layout_height="100dp"
                                   android:layout_centerInParent="true"
                                   android:src="@drawable/event_icon" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/events"
                                   android:textSize="16sp"
                                   android:layout_below="@id/img_events"
                                   android:layout_centerHorizontal="true"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginBottom="5dp"

                                   />

                               <Button
                                   android:id="@+id/btn_events"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@android:color/transparent"/>

                           </RelativeLayout>

                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <ImageView
                                   android:id="@+id/img_contact_us"
                                   android:layout_width="100dp"
                                   android:layout_height="100dp"
                                   android:layout_centerInParent="true"
                                   android:src="@drawable/contact_us" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/contact_us"
                                   android:textSize="16sp"
                                   android:layout_below="@id/img_contact_us"
                                   android:layout_centerHorizontal="true"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginBottom="5dp"

                                   />

                               <Button
                                   android:id="@+id/btn_contact_us"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@android:color/transparent"/>

                           </RelativeLayout>

                       </androidx.cardview.widget.CardView>

                   </LinearLayout>


               </LinearLayout>

           </RelativeLayout>
       </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/nav_item"
        android:background="#ffffff"
        />


</RelativeLayout>